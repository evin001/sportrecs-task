{
  "root": true,
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "node": true
  },
  "plugins": ["babel", "prettier"],
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": "warn",
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 2],
    "require-jsdoc": "off"
  }
}
